<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Mohamed's Portfolio</h1>
    <%=image_tag("profilecut.png", class:"ovalprofile")%>
    <p class="lead text-muted"> Welcome to my Portfolio! Here you'll find a wide array of favorite projects I built over the years. Please don't be shy, click around on my site and make use of the drop down to filter by technologies!</p>
    <p>
      <%= link_to 'Back to Portfolio Page', portfolios_path, class: 'btn btn-primary' %>
      <%= link_to 'My Blog', blogs_path, class: 'btn btn-secondary' %>
    </p>

    <%=select_tag "portfolios", 
    options_from_collection_for_select(@technologies, "name", "name"), 
    include_blank: true,
    id:"select_tag_id",
    data: {
      remote: true,
      url: '/portfolios/search',
      method: 'get'
    }
    %>

  </div>
</section>

<script>
  $('select_tag_id').change(function(){
    $.ajax({
      url: "/portfolios/search",
      type: "get",
      data: {select_tag_value: $('#select_tag_id option:selected').text()},
      success: console.log("great!")
    })
  });

  handleSelect(){
    $.ajax({
      url: "/portfolios/search",
      type: "get"
      data: {select_tag_value: $('#select_tag_id option:selected').text()},
      success: console.log("wowza")
    })
  }
</script>